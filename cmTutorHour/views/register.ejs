<%- include('partials/header') %>
<div class="card mx-auto futuristic-card" style="max-width: 500px;">
    <div class="card-body">
        <h2 class="card-title text-center text-neon">Register as <%= role.charAt(0).toUpperCase() + role.slice(1) %></h2>
        <form action="/auth/register" method="POST">
            <input type="hidden" name="role" value="<%= role %>">
            <div class="mb-3"><input type="text" name="name" class="form-control" placeholder="Name" required></div>
            <div class="mb-3"><input type="email" name="email" class="form-control" placeholder="Email" required></div>
            <div class="mb-3"><input type="password" name="password" class="form-control" placeholder="Password" required></div>
            <div class="mb-3"><input type="text" name="phone" class="form-control" placeholder="Phone Number" required></div>
            <% if (role === 'student') { %>
                <div class="mb-3"><input type="text" name="class" class="form-control" placeholder="Class"></div>
                <div class="mb-3"><input type="text" name="school" class="form-control" placeholder="School"></div>
                <div class="mb-3"><input type="text" name="favoriteSubjects" class="form-control" placeholder="Favorite Subjects (e.g., Math, Science)"></div>
            <% } else if (role === 'tutor') { %>
                <div class="mb-3"><input type="text" name="university" class="form-control" placeholder="University"></div>
                <div class="mb-3"><input type="text" name="teachingSubjects" class="form-control" placeholder="Teaching Subjects (e.g., Math, Science)"></div>
                <div class="mb-3"><input type="number" name="hourlyRate" class="form-control" placeholder="Hourly Rate ($)" required></div>
                <div class="mb-3"><textarea name="bio" class="form-control" placeholder="Bio"></textarea></div>
            <% } %>
            <button type="submit" class="btn btn-neon w-100">Register</button>
        </form>
        <p class="mt-3 text-center text-light">Have an account? <a href="/auth/login" class="text-neon">Login</a></p>
    </div>
</div>
<%- include('partials/footer') %>