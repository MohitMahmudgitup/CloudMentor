<%- include('../partials/header') %>
<h2 class="mb-4 text-neon">Welcome, <%= user.name %></h2>
<div class="row">
    <div class="col-md-6">
        <h3 class="text-light">Your Sessions</h3>
        <ul class="list-group">
            <% sessions.forEach(session => { %>
                <li class="list-group-item futuristic-item">
                    Student: <%= session.student.name %> | Date: <%= session.date.toLocaleString() %> | 
                    Earnings: <%= session.payment || 'Pending' %>
                </li>
            <% }) %>
        </ul>
    </div>
    <div class="col-md-6">
        <h3 class="text-light">Earnings: $<%= user.earnings %></h3>
        <form action="/tutor/withdraw" method="POST" class="futuristic-card p-3">
            <div class="mb-3"><input type="number" name="amount" class="form-control" placeholder="Amount to withdraw" required></div>
            <button type="submit" class="btn btn-neon">Withdraw</button>
        </form>
        <h3 class="text-light mt-4">Transactions</h3>
        <ul class="list-group">
            <% transactions.forEach(tx => { %>
                <li class="list-group-item futuristic-item">
                    <%= tx.type %>: $<%= tx.amount %> - <%= tx.status %>
                </li>
            <% }) %>
        </ul>
        <a href="/tutor/edit-profile" class="btn btn-neon mt-3">Edit Profile</a>
    </div>
</div>
<%- include('../partials/footer') %>